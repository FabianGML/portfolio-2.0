---
import { getI18N } from "@/i18n";
import Social from "@/components/Social.astro";
import HeroLights from "@/components/HeroLights.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale }).HERO;
---

<div
    class="overflow-hidden relative flex flex-col justify-center items-center h-screen w-screen"
>
    <HeroLights />
    <div class="relative">
        <div class="flex flex-col gap-4">
            <h1 class="text-white text-6xl md:text-8xl font-bold text-center">
                Fabián Gutiérrez
            </h1>
            <p class="text-white text-2xl text-center">
                {i18n.DESCRIPTION_FIRST}<strong>
                    {i18n.DESCRIPTION_STRONG}</strong
                >{i18n.DESCRIPTION_SECOND}
            </p>
        </div>
        <div class="flex justify-center items-center h-16">
            <Social
                href="https://github.com/fabianGML"
                icon="assets/icons/github.svg"
                tooltip="GitHub"
            />
            <Social
                href="https://linkedin.com/in/david-fabián-gutiérrez-molinar/"
                icon="assets/icons/linkedin.svg"
                tooltip="LinkedIn"
            />
            <Social
                href="https://x.com/Fabian_Gtz24"
                icon="assets/icons/x.svg"
                tooltip="Twitter"
            />
        </div>
    </div>
</div>

<style>
    h1 {
        font-family: var(--secondary-font);
    }
</style>
