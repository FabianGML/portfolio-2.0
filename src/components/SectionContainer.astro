---
interface Props {
    title?: string;
    id?: string;
}
const { title, id } = Astro.props;
---

<section class="max-w-[80rem] mx-auto" id={id ?? ""}>
    {
        title && (
            <h2 class="text-3xl font-bold ml-10 my-14 relative inline-block">
                {title}
            </h2>
        )
    }
    <slot />
</section>
