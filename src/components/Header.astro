---
import ListItem from "@/components/header/ListItem.astro";
---

<header class="w-screen h-20 fixed top-0">
    <nav
        class="flex justify-between items-center w-full h-full px-10 z-10 opacity-1"
    >
        <ul class="flex items-center gap-10">
            <ListItem href="/#experience">Experience</ListItem>
            <ListItem href="/#projects">Projects</ListItem>
            <ListItem href="/#about">About</ListItem>
        </ul>
    </nav>
    <!-- Idioma -->
</header>

<style>
    header {
        z-index: 50;
        /* Animación de desplazamiento hacia arriba */
        animation: scroll-animation auto linear both;
        animation-timeline: scroll(root block);
        animation-range: 0 100px;

        /* Segunda animación de desenfoque */
        animation-name: blur;
        animation-timeline: scroll(root block);
        animation-range: 0px 400px;
    }

    @keyframes blur {
        to {
            backdrop-filter: blur(1px);
            background: rgba(9, 21, 38, 0.8);
        }
    }

    @keyframes scroll-animation {
        0% {
            transform: translateY(0);
        }
        100% {
            transform: translateY(-100%);
        }
    }
</style>
