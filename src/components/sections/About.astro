<script>
    function haversine(
        lat1: number,
        lon1: number,
        lat2: number,
        lon2: number,
    ): number {
        const R = 6371; // Radio de la Tierra en km
        const toRad = (value: number) => value * (Math.PI / 180);

        const dLat = toRad(lat2 - lat1);
        const dLon = toRad(lon2 - lon1);

        const a =
            Math.sin(dLat / 2) * Math.sin(dLat / 2) +
            Math.cos(toRad(lat1)) *
                Math.cos(toRad(lat2)) *
                Math.sin(dLon / 2) *
                Math.sin(dLon / 2);

        const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1 - a));
        return R * c; // Distancia en km
    }

    // Coordenadas de Tijuana
    const tijuanaCoords = { lat: 32.5149, lon: -117.0382 };

    // Funci贸n para obtener la ubicaci贸n del usuario y calcular la distancia
    function getUserDistanceFromTijuana(): void {
        let distanciaTotal;
        if (!navigator.geolocation) {
            console.error(
                "La geolocalizaci贸n no est谩 soportada en este navegador.",
            );
            return;
        }

        navigator.geolocation.getCurrentPosition(
            (position: GeolocationPosition) => {
                const userCoords = {
                    lat: position.coords.latitude,
                    lon: position.coords.longitude,
                };

                const distance = haversine(
                    userCoords.lat,
                    userCoords.lon,
                    tijuanaCoords.lat,
                    tijuanaCoords.lon,
                );

                distanciaTotal = Math.round(distance);

                const distanciaContainer = document.getElementById("distancia");
                if (distanciaContainer)
                    distanciaContainer.innerHTML = distanciaTotal.toString();
            },
            (error: GeolocationPositionError) => {
                const distanciaContainer = document.getElementById(
                    "distancia_container",
                );
                if (distanciaContainer)
                    distanciaContainer.innerHTML =
                        "隆Permite la geolocalizacion para ver la distancia entre nosotros!";
            },
        );
    }

    getUserDistanceFromTijuana();
</script>
